
page{
	background-color: #fcfcfc;
}
.top{
	width: 100%;
	height: 100rpx;
}
.top .box{
	width: 50%;
	height: 80rpx;
	margin-left: 25%;
	margin-top: 10rpx;
}
.top .box>view{
	display: inline-block;
	width: 50%;
	line-height: 80rpx;
	font-size: 34rpx;
	color: #ccc;
	text-align: center;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border: 1px solid #ccc;
	background-color: #fff;
}
.top .box>view:nth-child(1){
	border-right: none;
	border-radius:20rpx 0 0 20rpx;
}
.top .box>view:nth-child(2){
	border-left: none;
	border-radius:0 20rpx 20rpx 0;
}
.top .box .active{
	background-color: #e89439;
	color: #fff;
}
.content{
	padding: 0 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.content .item{
	width: 100%;
	height: 250rpx;
	padding: 0 15rpx;
	margin-top: 40rpx;
	-webkit-box-shadow: 0rpx 0rpx 20rpx #ccc;
	        box-shadow: 0rpx 0rpx 20rpx #ccc;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background-color: #fff;
}
.item .money,.item .time,.item .state{
	width: 100%;
	height: 60rpx;
}
.item .money .name{
	color: #333;
}
.item .money .num{
	color: #e89439;
}
.item .name{
	color: #7b7b7b;
	display: inline-block;
	float: left;
	line-height: 60rpx;
	font-size: 33rpx;
}
.item .num{
	color: #7b7b7b;
	display: inline-block;
	float: right;
	line-height: 60rpx;
	font-size: 33rpx;
}

