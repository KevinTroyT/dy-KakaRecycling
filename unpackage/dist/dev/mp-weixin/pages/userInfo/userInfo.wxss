
.title{
	display: inline-block;
	font-size: 34rpx;
	line-height: 100rpx;
	float: left;
}
.head-portrait{
	width: 100%;
	height: 180rpx;
	padding: 40rpx 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.head-portrait .img{
	display: inline-block;
	float: right;
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
}
.head-portrait .img image{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
.username{
	position: relative;
	width: 100%;
	height: 100rpx;
	padding: 0 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.username .name{
	float: right;
	padding-right: 40rpx;
	line-height: 100rpx;
	color: #707070;
}
.username .right-icon{
	width: 40rpx;
	height: 50rpx;
	position: absolute;
	top: 25rpx;
	right: 10rpx;
}

