
page{
	background-color: #e6e6e6;
}
.information{
	padding: 30rpx;
}
.item{
	width: 100%;
	height: 300rpx;
	padding: 20rpx 30rpx;
	margin-bottom: 30rpx;
	border-radius: 10rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background-color: #fff;
}
.item .title{
	width: 100%;
	height: 50rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-bottom: 1px solid #ccc;
}
.item .title .item-left{
	float: left;
	display: inline-block;
}
.item .title .item-left image{
	float: left;
	width: 40rpx;
	height: 40rpx;
	display: inline-block;
}
.item .title .item-left .title-con{
	float: left;
	margin-left: 10rpx;
	line-height: 50rpx;
	display: inline-block;
}
.item .title .item-right{
	float: right;
	width: 35rpx;
	height: 20rpx;
}
.item .title .item-right image{
	width: 100%;
	height: 100%;
}
.item .content{
	width: 100%;
	height: 210rpx;
}
.item .content .content-con{
	width: 100%;
	height: 160rpx;
	padding-top: 15rpx;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 3;
	overflow: hidden;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.item .content .time{
	width: 100%;
	height: 50rpx;
	text-align: right;
	font-size: 26rpx;
	color: #909090;
}
.noInformation{
	width: 100%;
	margin-top: 320rpx;
	text-align: center;
}
.noInformation image{
	width: 400rpx;
	height: 320rpx;
}
.noInformation view{
	font-size: 42rpx;
	color: #ccc;
}

