.top-title{
	width: 100%;
	height: 100rpx;
	position: fixed;
	top: 0;
	left: 0;
	background-color: #fff;
	z-index: 999;
}
.top-title .content{
	width: 100%;
	text-align: center;
	line-height: 100rpx;
	font-size: 40rpx;
	color: #333;
}
.top-title image{
	width: 50rpx;
	height: 50rpx;
	position: absolute;
	right: 25rpx;
	top: 25rpx;
}
/* 轮播图 */
.carousel{
	margin-top: 100rpx;
	width: 100%;
	height: 300rpx;
}
.carousel .swiperImg{
	width: 100%;
	height: 100%;
}
/* 卡类图片 */
.cards{
	width: 100%;
	height: 520rpx;
}
.cards .title{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 34rpx;
}
.cards .cardsBox{
	width: 100%;
	height: 400rpx;
	overflow-y: hidden;
	overflow-x: auto;
	white-space: nowrap;
}
.cards .cardsBox .list{
	width: 33%;
	height: 100%;
	/* float: left; */
	display: inline-block;
}
.cards .cardsBox .list .item{
	width: 100%;
	height: 200rpx;
	padding: 0 5%;
	float: left;
}
.cards .cardsBox .list .item image{
	width: 90%;
	height: 130rpx;
}
.cards .cardsBox .list .item .name{
	width: 100%;
	text-align: center;
}
/* 公告 */
._position {
	position: absolute;
	top: 0;
	left: 0;
	width: 160rpx;
	height: 80rpx;
}
.imgs {
	width: 100%;
	height: 100%;
}
.display_row {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
/* 积分兑换 */
.integral{
	width: 100%;
	height: 220rpx;
	margin-bottom: 50rpx;
}
.integral .title{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 34rpx;
}
.integral .integralBox{
	width: 100%;
	height: 140rpx;
	float: left;
	overflow-y: hidden;
	overflow-x: auto;
	white-space: nowrap;
}
.integral .integralBox .itemCard{
	width: 50%;
	height: 100%;
	display: inline-block;
	padding: 0 40rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.integral .integralBox .itemCard image{
	width: 300rpx;
	height: 100%;
}
/* 热门回收 */
.hot{
	width: 100%;
}
.hot .title{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 34rpx;
}
.hot .hotCards{
	width: 100%;
}
.hot .hotCards .hotItem{
	width: 50%;
	padding: 0 4%;
	float: left;
	margin-bottom: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	display: inline-block;
}
.hot .hotCards .hotItem .item-left{
	float: left;
	width: 50%;
	height: 100%;
	text-align: right;
}
.hot .hotCards .hotItem .item-left .price{
	font-size: 30rpx;
	color: #909090;
}
.hot .hotCards .hotItem .item-right{
	float: right;
	width: 45%;
	height: 100rpx;
}
.hot .hotCards .hotItem .item-right image{
	width: 100%;
	height: 100%;
}

