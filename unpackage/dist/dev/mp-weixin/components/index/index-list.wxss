
page{
	background-color: #e6e6e6;
}
.index-list{
	width: 100%;
	height: 200rpx;
	padding: 17rpx 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.index-list .listItem{
	position: relative;
	width: 100%;
	height: 100%;
	background-color: #fff;
	padding: 20rpx 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	-webkit-box-shadow: 3px 3px 2px #ccc;
	        box-shadow: 3px 3px 2px #ccc;
}
.index-list .listItem .right-box{
	width: 70rpx;
	height: 70rpx;
	background-color: #dbdbdb;
	border-radius: 50%;
	position: absolute;
	right: 20rpx;
	top: 50%;
	margin-top: -35rpx;
	padding: 16rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.index-list .listItem .right-arrows{
	width: 100%;
	height: 100%;
}
.index-list .listItem .item-img{
	width: 130rpx;
	height: 130rpx;
	float: left;
	display: inline-block;
}
.index-list .listItem .item-img image{
	width: 100%;
	height: 100%;
}
.index-list .listItem .item-right{
	width: 78%;
	float: right;
	display: inline-block;
}
.index-list .listItem .item-right .faceValue{
	font-size: 26rpx;
	color: red;
}
.index-list .listItem .item-right .name{
	line-height: 70rpx;
}

