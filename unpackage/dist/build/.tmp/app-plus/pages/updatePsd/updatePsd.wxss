/* 底部按钮样式 */
.bottom{
	width: 100%;
	margin-top: 180rpx;
}
.bottom button{
	width: 80%;
	height: 100rpx;
	line-height: 100rpx;
	border: none;
	background-color: #1d81cf;
	color: #fff;
	border-radius: 20rpx;
}
.bottom .nav{
	width: 35%;
