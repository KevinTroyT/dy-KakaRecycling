.content{
	width: 90%;
	margin-left: 5%;
	margin-top: 30rpx;
	height: 600rpx;
	background-color: #fff;
}
.content .item{
	width: 33.3%;
	height: 200rpx;
	border-right: 1px solid #ccc;
	border-bottom: 1px solid #ccc;
	float: left;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	text-align: center;
}
.content .item:nth-child(3),.content .item:nth-child(6),.content .item:nth-child(9){
	border-right: none;
}
.content .item:nth-child(7),.content .item:nth-child(8),.content .item:nth-child(9){
	border-bottom: none;
}
.content .item image{
	width: 80rpx;
	height: 80rpx;
	margin-top: 20rpx;
}
page{
	background-color: #f2f2f2;
}
.background{
	position: absolute;
	top: 0;
	left: 0;
	z-index: -1;
	width: 100%;
	height: 200rpx;
	background-color: #6ac4c0;
}
.top{
	width: 90%;
	height: 360rpx;
	margin-left: 5%;
	margin-top: 100rpx;
	border-radius: 20rpx;
	padding: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background-color: #fff;
}
.top .user{
	width: 100%;
	height: 200rpx;
	padding-top: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-bottom: 1px solid #ccc;
}
.top .user .img{
	width: 130rpx;
	height: 130rpx;
	border-radius: 50%;
	margin-right: 20rpx;
	float: left;
	display: inline-block;
}
.top .user .img image{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
.top .middle{
	height: 100%;
	padding-top: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	display: inline-block;
}
.top .middle .name .username{
	display: inline-block;
	margin-right: 25rpx;
}
.top .middle .name image{
	width: 30rpx;
	height: 30rpx;
	display: inline-block;
}
.top .right{
	width: 160rpx;
	height: 100%;
	float: right;
	display: inline-block;
}
.top .right .btn{
	width: 100%;
	height: 50rpx;
	margin-top: 35rpx;
	line-height: 50rpx;
	text-align: center;
	border: 1px solid #c8332d;
	background-color: #fff;
	color: #c8332d;
	border-radius: 30rpx;
}
.top .userMoney{
	width: 100%;
	height: 100rpx;
}
.top .userMoney .left{
	display: inline-block;
	width: 50%;
	height: 100%;
	padding-top: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.top .userMoney .left .name{
	font-size: 28rpx;
	color: #4b4b4b;
	line-height: 40rpx;
}
.top .userMoney .left .num{
	font-size: 36rpx;
	color: #5b5b5b;
	line-height: 40rpx;
}
.top .userMoney .right{
	display: inline-block;
	width: 50%;
	height: 100%;
}
.top .userMoney .right .withdraw-deposit{
	display: inline-block;
	width: 150rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	background-color: #6ac4c0;
	margin-top: 20rpx;
	border-radius: 10rpx;
	color: #fff;
}
.top .userMoney .right .record{
	display: inline-block;
	float: right;
	line-height: 100rpx;
	color: #6ac4c0;
}

